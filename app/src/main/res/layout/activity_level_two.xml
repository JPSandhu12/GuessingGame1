<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_level_two"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.mesa.guessinggame.LevelTwo"
    android:background="@android:color/black">

    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="61dp"
        android:id="@+id/button1Level2"
        android:layout_below="@+id/textLevelTwo"
        android:layout_toLeftOf="@+id/textLevelTwo"
        android:layout_toStartOf="@+id/textLevelTwo"
        android:textStyle="normal|bold|italic" />

    <TextView
        android:text="Level 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textLevelTwo"
        android:textSize="36sp"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="47dp"
        android:layout_marginEnd="47dp"
        android:id="@+id/button5"
        android:layout_alignBaseline="@+id/button4"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignRight="@+id/button3Level2"
        android:layout_alignEnd="@+id/button3Level2"
        android:textStyle="normal|italic" />

    <TextView
        android:text="Score: 999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/HighScoreLevel2"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <Button
        android:text="Replay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLevel2Replay"
        android:layout_below="@+id/HighScoreLevel2"
        android:layout_alignRight="@+id/HighScoreLevel2"
        android:layout_alignEnd="@+id/HighScoreLevel2" />

    <Button
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2Level2"
        android:layout_above="@+id/button4"
        android:layout_alignLeft="@+id/HighScoreLevel2"
        android:layout_alignStart="@+id/HighScoreLevel2"
        android:textStyle="normal|italic" />

    <Button
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3Level2"
        android:layout_alignBaseline="@+id/button2Level2"
        android:layout_alignBottom="@+id/button2Level2"
        android:layout_toRightOf="@+id/textLevelTwo"
        android:layout_toEndOf="@+id/textLevelTwo"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:textStyle="normal|italic" />

    <Button
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="38dp"
        android:id="@+id/button4"
        android:layout_below="@+id/button1Level2"
        android:layout_toLeftOf="@+id/button5"
        android:layout_toStartOf="@+id/button5"
        android:textStyle="normal|italic" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cow"
        android:layout_below="@+id/buttonLevel2Replay"
        android:layout_alignLeft="@+id/HighScoreLevel2"
        android:layout_alignStart="@+id/HighScoreLevel2"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:id="@+id/imageView4" />
</RelativeLayout>
